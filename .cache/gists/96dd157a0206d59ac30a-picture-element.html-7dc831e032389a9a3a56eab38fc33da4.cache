<picture class="page__image-header__photo">
    <!--[if IE 9]><video style="display: none;"><![endif]-->
    {exp:ce_img:pair
        src="{content_focal_image}"
        filename_suffix="_full"
        width="940"
        allow_scale_larger="yes"
        crop="yes"
        interlace="yes"
        cache_dir="/"
        }
        <source srcset="{made}" media="(min-width: 40em)">
    {/exp:ce_img:pair}
    {exp:ce_img:pair
        src="{content_focal_image}"
        filename_suffix="_medium"
        width="800"
        height="600"
        crop="yes"
        interlace="yes"
        cache_dir="/"
        }
        <source srcset="{made}" media="(min-width: 20em)">
    {/exp:ce_img:pair}
    {exp:ce_img:pair
        src="{content_focal_image}"
        filename_suffix="_small"
        width="480"
        height="360"
        crop="yes"
        interlace="yes"
        cache_dir="/"
        }
        <source srcset="{made}">
        <!--[if IE 9]></video><![endif]-->
        <img src="{made}" alt="">
    {/exp:ce_img:pair}
</picture>
