{% unless page.show_posts == false %}
  {% for related_post in site.related_posts limit:3 %}
    {% if forloop.first == true %}
      <section class="module module--promotional">
        <p>Looking for something else to read? These entries may be related in some way:</p>
        <ul class="listing listing--links">
    {% endif %}

    <li class="listing_item listing__item--{{ forloop.index }}">
      <a href="{{ related_post.url }}">{{ related_post.title | strip_links }}</a>
    </li>
      
    {% if forloop.last == true %}
          </ul>
      </section>
    {% endif %}
  {% endfor %}
{% endunless %}